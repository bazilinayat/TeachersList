<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bazil.teacherslist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Listing"
            android:label="@string/app_choose"
            android:parentActivityName="com.example.bazil.teacherslist.MainActivity"/>
        <activity android:name=".makeEvent"
            android:label="@string/app_create"
            android:parentActivityName="com.example.bazil.teacherslist.MainActivity"/>
        <activity android:name=".LookEvent"
            android:parentActivityName="com.example.bazil.teacherslist.MainActivity"/>
        <activity android:name=".Search"
            android:parentActivityName="com.example.bazil.teacherslist.MainActivity"></activity>
    </application>

</manifest>